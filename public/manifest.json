{
  "manifest_version": 2,
  "name": "no-arrow-keys",
  "version": "0.1.0",
  "description": "An minimalistic, non-intrusive extension to free you from using arrow keys in browser.",
  "author": "Hugo Sum",
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["dist/injection.js"]
    }
  ]
}
